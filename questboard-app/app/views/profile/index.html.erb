<div id="w">
	<div id="content" class="clearfix">
		<%= image_tag("avatar.png", :alt => "avatar feed") %>
		<h1><%= "#{@member.first_name} #{@member.last_name}" %></h1>

		<nav id="profiletabs">
			<ul class="clearfix">
				<li>
					<a href="#MyBoard">About</a>
				</li>
				<li>
					<a href="#Connections">Connections</a>
				</li>
				<li>
					<a href="#Reviews">Reviews</a>
				</li>
				<li>
					<a href="#Performance">Performance</a>
				</li>
				<li>
					<a href="#settings">Settings</a>
				</li>
			</ul>
		</nav>

		<section id="MyBoard">

			<p class="setting">
				<span>E-mail Address: </span> <%= @member.email%>
			</p>

			<p class="setting">
				<span>Full Name: </span><%= "#{@member.first_name} #{@member.last_name}" %>
			</p>

			<p class="setting">
				<span>Username: </span><%= @member.username%>
			</p>

			<% if @member.gender %>
			<p class="setting">
				<span>Gender: </span><%= "male" %>
			</p>
			<% else %>
			<p class="setting">
				<span>Gender: </span><%= "female" %>
			</p>

			<%end %>
			<%= link_to "Connect to Google+", "/auth/google_oauth2", id: "sign_in" %>

		</section>

		<section id="MyBoard" class="hidden">
			<p>
				Most recent actions:
			</p>

			<p class="MyBoard">
				@10:15PM - Submitted a news article
			</p>

			<p class="MyBoard">
				@9:50PM - Submitted a news article
			</p>

			<p class="MyBoard">
				@8:15PM - Posted a comment
			</p>

			<p class="MyBoard">
				@4:30PM - Added <strong>someusername</strong> as a friend
			</p>

			<p class="MyBoard">
				@12:30PM - Submitted a news article
			</p>
		</section>

		<section id="Connections" class="hidden">
			<p>
				My Connections:
			</p>

			<ul id="friendslist" class="clearfix"></ul>
		</section>

		<section id="settings" class="hidden">

			<% if logged_in? && @current_user.id == @member.id %>
			<div style="">
				<%= button_to "Edit Profile", edit_user_path(current_user), class: "delete-post", style: "float:right;margin-right: 1em;", method: :get %>
			</div>
			<% end %>
			<p>
				Edit your user settings:
			</p>
			<p class="setting">
				<span>E-mail Address </span> lolno@gmail.com
			</p>

			<p class="setting">
				<span>Language </span> English(US)
			</p>

			<p class="setting">
				<span>Profile Status </span> Public
			</p>

			<p class="setting">
				<span>Update Frequency </span> Weekly
			</p>

			<p class="setting">
				<span>Connected Accounts </span> None
			</p>
		</section>
	</div><!-- @end #content -->
</div><!-- @end #w -->
<script type="text/javascript">
	$(function() {
	$('#profiletabs ul li a').on('click', function(e) {
	e.preventDefault();
	var newcontent=$(this).attr('href');
	$('#profiletabs ul li a').removeClass('sel');
	$(this).addClass('sel');
	$('#content section').each(function() {
	if(!$(this).hasClass('hidden')) {
	$(this).addClass('hidden');
	}
	});
	$(newcontent).removeClass('hidden');
	});
	});
</script>
