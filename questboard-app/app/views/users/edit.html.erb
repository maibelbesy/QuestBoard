<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
     
		<%= f.email_field :email, class: "login-input", placeholder: "Enter your email", style: "float:left;background-color: transparent;margin-top: 0.5em;" %>
        <%= password_field_tag :current_password, params[:current_password], class: "login-input", placeholder: "Old password", style: "float:left;background-color: transparent;margin-top: 0.5em;" %>
        <%= f.password_field :password, class: "login-input", placeholder: "Create a new password", style: "float:left;background-color: transparent;margin-top: 0.5em;" %>
        <%= f.password_field :password_confirmation, class: "login-input", placeholder: "Confirm a new password", style: "float:left;background-color: transparent;margin-top: 0.5em;" %>
        <%= f.text_field :first_name, class: "login-input", placeholder: "Enter your first name", style: "float:left;background-color: transparent;margin-top: 0.5em;" %>
        <%= f.text_field :last_name, class: "login-input", placeholder: "Enter your last name", style: "float:left;background-color: transparent;margin-top: 0.5em;" %>
        
      <%= f.submit "Save changes", class: "login-button", style: "margin-top: 0.5em;" %>
    <% end %>

    </div>
  </div>
</div>