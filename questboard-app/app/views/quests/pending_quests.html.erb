<div style="overflow: auto">
	<header class="header-title" style="float:left;">My Pending Quests</header>
	<!-- <a href="#" class="circular-button" style="float: right">+</a> -->
	<%= link_to "+", new_quest_path, class: "circular-button", style: "float: right; color: white;" %>
</div>
<br>
<section>
<h1>To me</h1>
<div>
	<table style="width:80%;border-collapse: separate;border-spacing: 0em 1em;margin-left: 4em;">
		<% @quests.each do |quest| %>
			<tr style="padding-bottom: 1em">
				<!-- <td><font class="label" style="width:20%;">Title: </font></td> -->
				<!-- <td><p class="label" style="margin-bottom: 0.5em;"><%= quest.title %></p></td> -->	
				<td><%= link_to "#{quest.title}", quest_path(quest.id), class: "label", style: "margin-bottom: 0.5em;" %></td>
			</tr>
		<% end %>
	</table>
</div>
</section>
<section>
<h1>By me</h1>
<div>
	<table style="width:80%;border-collapse: separate;border-spacing: 0em 1em;margin-left: 4em;">
		<% @by_me_quests.each do |by_me_quest| %>
			<tr style="padding-bottom: 1em">
					
				<td><%= link_to "#{by_me_quest.title}", quest_path(by_me_quest.id), class: "label", style: "margin-bottom: 0.5em;" %></td>
				<td style=""><%= button_to "X", delete_quest_path(by_me_quest.id), method: :delete, class: "button", style: "width: 20%;float:right;" %></p></td>
			</tr>
		<% end %>
	</table>
</div>
</section>