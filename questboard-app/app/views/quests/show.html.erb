<<<<<<< HEAD

<tr style="padding-bottom: 1em">
                <td><font class="label" style="width:20%;">Title: </font></td>
                <td style="width:80%;"><%= @quest.title%></td>
                </p>
           
                <td><font class="label" style="width:20%;">Description: </font></td>
                <td style="width:80%;"><%= @quest.description%></td>
                </p>
                <td><font class="label" style="width:20%;">Completed: </font></td>
                <td style="width:80%;"><%= @quest.is_completed%></td>
                </p>
                <td><font class="label" style="width:20%;">Bounty: </font></td>
                <td style="width:80%;"><%= @quest.bounty%></td>
                </p>
                <td><font class="label" style="width:20%;">Due date: </font></td>
                <td style="width:80%;"><%= @quest.due_date%></td>
                </p>

                 <%if @current_user.id == @user_quest.assignor_id and @quest.is_completed == true %>
                <td><font class="label" style="width:20%;">Review: </font></td>
                <td style="width:80%;"><%= @user_quest.review %></td>
                <% end %>

                <td><font class="label" style="width:20%;">Completed at: </font></td>
                <td style="width:80%;"><%= @quest.completed_at%></td>
                </p>
                <td><font class="label" style="width:20%;">Status: </font></td>
                <td style="width:80%;"><%= @quest.status%></td>
                </p>
                <td><font class="label" style="width:20%;">Assgined to: </font></td>
                <td style="width:80%;"><%= @name.username%></td>
                </p>
                <td><font class="label" style="width:20%;">Is accepted: </font></td>
                <td style="width:80%;"><%= @user_quest.is_accepted%></td>
                </p>
                <td><font class="label" style="width:20%;">Is rejected: </font></td>
                <td style="width:80%;"><%= @user_quest.is_rejected%></td>
                </p>
                <div>
    <table style="width:80%;border-collapse: separate;border-spacing: 0em 1em;margin-left: 4em;">
        <% @tasks.each do |task| %>
            <tr style="padding-bottom: 1em">
    
                <td><%= task.title%></td>
                <%if task.user == @current_user.id%>
                <td style=""><%= button_to "X", delete_task_path(task.id), method: :delete, class: "button", style: "width: 20%;float:right;" %></p></td>
                <%end%>
            </tr>
        <% end %>
    </table>
</div>
			<%if QuestVideo.find_by_quest_id(@quest.id).url != ""%>
				<iframe width="560" height="349" src="<%= "http://www.youtube.com/embed/"+@video %>"></iframe>
			<td><font class="label" style="width:20%;">Images </font></td>
				<%end%>
				<% @photos.each do |pic| %>
				<%= link_to image_tag(pic.photo.url (:small)), pic.photo.url %>
			<% end %>
                
</tr>
<div><%= button_to "Add Tasks", task_path(@quest.id), method: :get, class: "button", style: "width: 20%;float:right;" %></div>

<% if @current_user.id == @assignee_id and @current_user.id != @assignor_id and @is_accepted == false and @is_rejected == false%>
<div><%= button_to "Reject", reject_quest_path(@quest.id), method: :post, class: "button", style: "width: 20%;float:right;" %></div>
<div><%= button_to "Accept", accept_quest_path(@quest.id), method: :post, class: "button", style: "width: 20%;float:right;" %></div>
<%end%>
<%if @quest.is_completed == true%>
<div><%= button_to "Review", review_quest_path(@quest.id), method: :get, class: "button", style: "width: 20%;float:right;" %></div>
<%end%>

<!-- <!Status buttons to update Quests> -->
	<div class="btn-group" role="group" aria-label="...">
		<script><%if @quest.status == "OnIt" %>
	$(function() {
	document.getElementById("1").disabled=true;
	});
<% elsif @quest.status == "InProgress"%>
	$(function() {
	document.getElementById("2").disabled=true;
	});
<% elsif @quest.status == "Done"%>
	$(function() {
	document.getElementById("3").disabled=true;
	});
<%end%></script>
<button type="submit" class="btn btn-default" onclick="window.location.href='/quests/<%= @quest.id%>/OnIt'" id = "1">
			On it
		</button>
		<button type="button" class="btn btn-default" onclick="window.location.href='/quests/<%= @quest.id%>/InProgress'" id = "2">
			in Progress
		</button>
		<button type="button" class="btn btn-default" onclick="window.location.href='/quests/<%= @quest.id%>/Done'" id = "3">
			Done
		</button>
	</div>
</tr>

